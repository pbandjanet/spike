    <script>
      $('#check_all').click(function() {
          $('input[name=company]').prop('checked', true);
      });

      //".checkbox" change 
      $('input[name=company]').change(function(){ 
          //uncheck "select all", if one of the listed checkbox item is unchecked
          if(false === $(this).prop("checked")){ //if this item is unchecked
              $("#check_all").prop('checked', false); //change "select all" checked status to false
          }
          //check "select all" if all checkbox items are checked
          if ($('input[name=company]:checked').length == $('input[name=company]').length ){
              $("#check_all").prop('checked', true);
          }
      });
    </script>

